<p id="alert"><%= alert %></p>
<p id="notice"><%= notice %></p>

<h1>Log in</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <br>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>
  <br>
  <%= f.submit "Log in" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
