<p id="alert"><%= alert %></p>
<h1>Log in</h1>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>
    <%= f.submit "Log in" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
